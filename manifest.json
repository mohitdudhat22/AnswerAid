{
    "manifest_version": 3,
    "name": "My Simple Extension",
    "version": "1.0",
    "description": "A simple Chrome extension built with HTML, CSS, and JavaScript.",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  